{
  "include": ["env.d.ts", "src/vue.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "noUnusedLocals": true, // Advierte sobre variables locales no usadas

    "noFallthroughCasesInSwitch": true, // Advierte si un case en switch cae al siguiente sin break
    "allowSyntheticDefaultImports": true, // Permite importar m√≥dulos sin export default
    "allowJs": true, // Permite importar archivos JavaScript

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
