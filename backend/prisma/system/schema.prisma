//prisma/system/schema.prisma
generator client {
  provider = "prisma-client-js"
  output   = "./../../node_modules/@prisma/client-system"
}

datasource db {
  provider = "postgresql"
  url      = env("SYSTEM_DATABASE_URL") // DB Central de biodesk
}

model SystemUser {
  id          Int      @id @default(autoincrement())
  uuid        String   @unique @db.Uuid @default(uuid()) // Identificador universal
  ci          String   @unique
  name        String
  lastName    String
  email       String   @unique
  password    String
  salt        String
  isActive    Boolean  @default(true)
  lastAccess  DateTime?

  labs Lab[]
}

model Lab {
  id          Int      @id @default(autoincrement())
  name        String
  dbName      String   @unique @default(nanoid())
  status      String   @default("active") //pensado para logica de SaaS
  rif         String   @unique
  dir         String
  phoneNums   String[]
  logoPath    String?
  createdAt   DateTime @default(now())
  
  users       SystemUser[]
}