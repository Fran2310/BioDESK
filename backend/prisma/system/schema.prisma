generator client {
  provider = "prisma-client-js"
  output   = "./../../node_modules/@prisma/client-system"
}

datasource db {
  provider = "postgresql"
  url      = env("SYSTEM_DATABASE_URL")
}

model SystemUser {
  id          Int      @id @default(autoincrement())
  uuid        String   @unique @default(uuid())  // Identificador universal
  ci          String   @unique
  name        String
  lastName    String
  email       String   @unique
  password    String
  salt        String
  isActive    Boolean  @default(true)
  lastAccess  DateTime?

  labId       Int?
  lab         Lab?     @relation(fields: [labId], references: [id])
}

model Lab {
  id          Int      @id @default(autoincrement())
  name        String
  dbName      String   @unique
  status      String   @default("active")
  rif         String
  dir         String?
  phoneNums   String?
  logoPath    String?
  createdAt   DateTime @default(now())
  
  // Relaci√≥n inversa con User
  users       SystemUser[]
  
  @@unique([name, dbName])
}